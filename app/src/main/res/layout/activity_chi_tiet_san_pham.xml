<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.anime.rezero.appshop.activity.ChiTietSanPham">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tool_bar_chitietsp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="Chi tiết sản phẩm"
        android:background="#fed700">
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:background="#ffffff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <ImageView
            android:id="@+id/img_chitiet"
            android:layout_margin="10dp"
            android:src="@mipmap/ic_launcher"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txt_tenchitietsp"
                android:textSize="18sp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:text="Ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/txt_chitietgiasp"
                android:textSize="18sp"
                android:textColor="#ff0000"
                android:textStyle="bold"
                android:text="Giá"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:background="@drawable/spinner"
                android:textAlignment="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="2dp"
                android:id="@+id/spiner"
                android:layout_width="match_parent"
                android:layout_height="30dp"></Spinner>

            <Button
                android:id="@+id/btn_muahang"
                android:background="@drawable/button"
                android:textSize="8sp"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:text="MUA NGAY\nGiao tận nơi hoặc nhận tại siêu thị"
                android:layout_width="match_parent"
                android:layout_height="40dp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            android:text="Bài viết đánh giá"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingBottom="10dp"
                android:textSize="20sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:textColor="#000000"
                android:id="@+id/txt_mota"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </ScrollView>

    </LinearLayout>
</LinearLayout>
